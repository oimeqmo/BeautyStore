<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report
        id="action_report_beauty_invoice_pdf"
        model="account.invoice"
        string="Factura BEAUTY STORE"
        report_type="qweb-pdf"
        name="beauty_invoice.report_beauty_invoice_pdf"
        file="beauty_invoice.report_beauty_invoice_pdf"
    />

    <record id="action_report_beauty_invoice_pdf_repot" model="report.paperformat">
